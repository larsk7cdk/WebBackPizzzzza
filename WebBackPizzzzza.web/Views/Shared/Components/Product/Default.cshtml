@model WebBackPizzzzza.web.ViewModels.ProductViewModel

<style>
    a { width: 35px; }
</style>

<div form asp-controller="Products" asp-action="Add">
    <div class="d-flex card" style="width: 205px">
        <div class="card-header">@Model.Name</div>
        <div class="card-body d-flex justify-content-center">
            <img src="images/pizza-slice-solid.svg" asp-append-version="true" height="80"/>
        </div>
        <div class="card-footer">
            @Model.Price.ToString("C")
            <div class="d-flex justify-content-center mt-2">
                <a class="btn btn-primary btn-sm" onclick="addToBasket(1)">+</a>
                <span class="px-2">0</span>
                <a class="btn btn-primary btn-sm">-</a>
            </div>
        </div>
    </div>
</div>