@model IEnumerable<WebBackPizzzzza.web.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Menu</h1>

<table class="table table-bordered">

    @foreach (var product in Model)
    {
        <tr>
            <td style="width: 100%">
                <a asp-controller="Products" asp-action="AddToBasket" asp-route-id="@product.Id"> @await Component.InvokeAsync("Product", product)</a>

            </td>
        </tr>
    }
</table>